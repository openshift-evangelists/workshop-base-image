{
    "kind": "Template",
    "apiVersion": "v1",
    "metadata": {
        "name": "workshop-base-persistent",
        "annotations": {
            "openshift.io/display-name": "Workshop (Base/Persistent)"
        }
    },
    "parameters": [
        {
            "name": "APPLICATION_NAME",
            "value": "workshop",
            "required": true
        },
        {
            "name": "PROJECT_ROLE",
            "value": "view",
            "required": true
        },
        {
            "name": "VOLUME_SIZE",
            "value": "1Gi",
            "required": true
        },
        {
            "name": "OC_VERSION",
            "value": "3.10.41",
            "required": true
        },
        {
            "name": "KUBECTL_VERSION",
            "value": "1.10.0",
            "required": true
        },
        {
            "name": "AUTH_USERNAME",
            "value": ""
        },
        {
            "name": "AUTH_PASSWORD",
            "value": ""
        }
    ],
    "objects": [
        {
            "kind": "ServiceAccount",
            "apiVersion": "v1",
            "metadata": {
                "name": "${APPLICATION_NAME}-role",
                "labels": {
                    "app": "${APPLICATION_NAME}"
                }
            }
        },
        {
            "kind": "RoleBinding",
            "apiVersion": "v1",
            "metadata": {
                "name": "${APPLICATION_NAME}-${PROJECT_ROLE}",
                "labels": {
                    "app": "${APPLICATION_NAME}"
                }
            },
            "subjects": [
                {
                    "kind": "ServiceAccount",
                    "name": "${APPLICATION_NAME}-role"
                }
            ],
            "roleRef": {
                "name": "${PROJECT_ROLE}"
            }
        },
        {
            "kind": "ImageStream",
            "apiVersion": "v1",
            "metadata": {
                "name": "${APPLICATION_NAME}",
                "labels": {
                    "app": "${APPLICATION_NAME}"
                }
            },
	    "lookupPolicy": {
		"local": true
	    }
        },
        {
            "kind": "BuildConfig",
            "apiVersion": "v1",
            "metadata": {
                "name": "${APPLICATION_NAME}",
                "labels": {
                    "app": "${APPLICATION_NAME}"
                }
            },
            "spec": {
                "triggers": [
                    {
                        "type": "ConfigChange"
                    },
                    {
                        "type": "ImageChange"
                    }
                ],
                "source": {
                    "type": "Git",
                    "git": {
                        "uri": "https://github.com/openshift-evangelists/workshop-base-image.git"
                    }
                },
                "strategy": {
                    "type": "Docker",
                    "dockerStrategy": {
                        "from": {
                            "kind": "DockerImage",
                            "name": "centos/s2i-base-centos7:latest"
                        },
                        "buildArgs": [
                            {
                                "name": "OC_VERSION",
                                "value": "${OC_VERSION}"
                            },
                            {
                                "name": "KUBECTL_VERSION",
                                "value": "${KUBECTL_VERSION}"
                            }
                        ]
                    }
                },
                "output": {
                    "to": {
                        "kind": "ImageStreamTag",
                        "name": "${APPLICATION_NAME}:latest"
                    }
                }
            }
        },
	{
	    "apiVersion": "v1",
	    "kind": "PersistentVolumeClaim",
	    "metadata": {
		"name": "${APPLICATION_NAME}-data",
		"labels": {
		    "app": "${APPLICATION_NAME}"
		}
	    },
	    "spec": {
		"accessModes": [
		    "ReadWriteOnce"
		],
		"resources": {
		    "requests": {
			"storage": "${VOLUME_SIZE}"
		    }
		}
	    }
	},
        {
            "kind": "DeploymentConfig",
            "apiVersion": "v1",
            "metadata": {
                "name": "${APPLICATION_NAME}",
                "labels": {
                    "app": "${APPLICATION_NAME}"
                }
            },
            "spec": {
                "strategy": {
                    "type": "Recreate"
                },
                "triggers": [
                    {
                        "type": "ConfigChange"
                    },
                    {
                        "type": "ImageChange",
                        "imageChangeParams": {
                            "automatic": true,
                            "containerNames": [
                                "workshop"
                            ],
                            "from": {
                                "kind": "ImageStreamTag",
                                "name": "${APPLICATION_NAME}:latest"
                            }
                        }
                    }
                ],
                "replicas": 1,
                "selector": {
                    "app": "${APPLICATION_NAME}",
                    "deploymentconfig": "${APPLICATION_NAME}"
                },
                "template": {
                    "metadata": {
                        "labels": {
                            "app": "${APPLICATION_NAME}",
                            "deploymentconfig": "${APPLICATION_NAME}"
                        }
                    },
                    "spec": {
                        "serviceAccountName": "${APPLICATION_NAME}-role",
			"initContainers": [
			    {
				"name": "setup-volume",
				"command": [
				    "/opt/workshop/bin/setup-volume.sh",
				    "/opt/app-root",
				    "/mnt/workspace"
				],
				"image": "${APPLICATION_NAME}:latest",
				"volumeMounts": [
				    {
					"name": "data",
					"mountPath": "/mnt"
				    }
				]
			    }
			],
                        "containers": [
                            {
                                "name": "workshop",
                                "image": "${APPLICATION_NAME}:latest",
                                "ports": [
                                    {
                                        "containerPort": 8080,
                                        "protocol": "TCP"
                                    }
                                ],
                                "env": [
                                    {
                                        "name": "AUTH_USERNAME",
                                        "value": "${AUTH_USERNAME}"
                                    },
                                    {
                                        "name": "AUTH_PASSWORD",
                                        "value": "${AUTH_PASSWORD}"
                                    }
                                ],
				"volumeMounts": [
				    {
					"name": "data",
					"mountPath": "/opt/app-root",
					"subPath": "workspace"
				    }
				]
                            }
                        ],
                        "volumes": [
                            {
                                "name": "data",
                                "persistentVolumeClaim": {
                                    "claimName": "${APPLICATION_NAME}-data"
                                }
                            }
                        ]
                    }
                }
            }
        },
        {
            "kind": "Service",
            "apiVersion": "v1",
            "metadata": {
                "name": "${APPLICATION_NAME}",
                "labels": {
                    "app": "${APPLICATION_NAME}"
                }
            },
            "spec": {
                "ports": [
                    {
                        "name": "8080-tcp",
                        "protocol": "TCP",
                        "port": 8080,
                        "targetPort": 8080
                    }
                ],
                "selector": {
                    "app": "${APPLICATION_NAME}",
                    "deploymentconfig": "${APPLICATION_NAME}"
                }
            }
        },
        {
            "kind": "Route",
            "apiVersion": "v1",
            "metadata": {
                "name": "${APPLICATION_NAME}",
                "labels": {
                    "app": "${APPLICATION_NAME}"
                }
            },
            "spec": {
                "host": "",
                "to": {
                    "kind": "Service",
                    "name": "${APPLICATION_NAME}",
                    "weight": 100
                },
                "port": {
                    "targetPort": "8080-tcp"
                },
                "tls": {
                    "termination": "edge",
                    "insecureEdgeTerminationPolicy": "Redirect"
                }
            }
        }
    ]
}
